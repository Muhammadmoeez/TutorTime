<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TutorTime" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <!--Ali style begin here-->

    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">#00b8d4</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <!--        <item name="navigationIcon">@drawable/ic_back_arrow</item>-->
    </style>
    <!-- toolbar popup theme -->
    <style name="MyToolbarCustomPopupStyle"
        parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#151925</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

    <!--    toolbar styling according to material guidlines-->
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:fontFamily">@font/roboto_bold</item>-->
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">12sp</item>
        <!--        <item name="android:fontFamily">@font/roboto_bold</item>-->
    </style>
</resources>